    "scripts",
    "add script",
    "get script",
    "delete script"
  ],
  "author": "Dhruv Jain <dhruvjainpenny@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/maddhruv/package-script-utils/issues"
  },
  "homepage": "https://github.com/maddhruv/package-script-utils#readme",
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "tsup": "^6.6.3",
    "types-sync": "^3.26.0",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vitest": "^0.29.2"
  }
}
